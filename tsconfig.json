{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "es2015", "es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "Node",

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "pretty": true, 
    "target": "es2018",
    "baseUrl": "src",
    "paths": {
      "common/*": ["./common/*"]
    },
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
